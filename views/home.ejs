<%- include header %>
<div class="ch-container">
    <div class="row">

        <!-- left menu starts -->
        <%- include left %>
        <!--/span-->
        <!-- left menu ends -->

        <noscript>
            <div class="alert alert-block col-md-12">
                <h4 class="alert-heading">Warning!</h4>

                <p>You need to have JavaScript enabled to use this site.</p>
            </div>
        </noscript>

        <div id="content" class="col-lg-10 col-sm-10">
            <!-- content starts -->
            <div>
                <ul class="breadcrumb">
                    <li>
                        <a href="#">主页</a>
                    </li>
                </ul>
            </div>

            <div class=" row">
                <div class="col-md-3 col-sm-3 col-xs-6">
                    <a title="" class="well top-block">
                        <i class="glyphicon glyphicon-user blue"></i>

                        <div>全员师生总数</div>
                        <div><%= workers_num+students_num %></div>

                    </a>
                </div>

                <div class="col-md-3 col-sm-3 col-xs-6">
                    <a title="" class="well top-block">
                        <i class="glyphicon glyphicon-briefcase green"></i>

                        <div>在职教师</div>
                        <div><%= workers_num %></div>

                    </a>
                </div>

                <div class="col-md-3 col-sm-3 col-xs-6">
                    <a title="" class="well top-block">
                        <i class="glyphicon glyphicon-user yellow"></i>

                        <div>在籍学生</div>
                        <div><%= students_num %></div>
                    </a>
                </div>

                <div class="col-md-3 col-sm-3 col-xs-6">
                    <a title="" class="well top-block">
                        <i class="glyphicon glyphicon-th red"></i>

                        <div>开设班级</div>
                        <div><%= classes_num %></div>

                    </a>
                </div>
            </div>
            <!--/row-->

            <div class="row">
                    <div class="box col-md-4">
                            <div class="box-inner">
                                <div class="box-header well" data-original-title="">
                                    <h2><i class="glyphicon glyphicon-star-empty"></i>
                                        Welcome!</h2>
                    
                                    
                                </div>
                                <div class="box-content">
                                   <h2>
                                        <small>
                                                欢迎登录小太阳幼儿园管理系统,
                                            </small>
                                            <%=locals.user%>
                                   </h2>
                                   <h2>
                                        <small>您的身份是:</small>
                                        <%= locals.rolename%>
                                   </h2>
                                </div>
                            </div>
                        </div>
                <div class="box col-md-4">
                    <div class="box-inner">
                        <div class="box-header well" data-original-title="">
                            <h2><i class="glyphicon glyphicon-list-alt"></i> 数据图表</h2>

                        </div>
                        <div class="box-content">
                            <div id="piechart" style="height: 300px; padding: 0px; position: relative;">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="box col-md-4">
                    <div class="box-inner">
                        <div class="box-header well" data-original-title="">
                            <h2><i class="glyphicon glyphicon-list-alt"></i> 最新公告</h2>

                        </div>
                        <div class="box-content" style="display: block;">
                            <h3><%= first_notice.n_title %></h3>
                            <h5>发布人：<%= first_notice.name %>&nbsp;&nbsp;&nbsp;&nbsp;<small style="color:orange">时间：<%= first_notice.n_time %></small> </h5>
                            <p><%= first_notice.n_content %></p>
                        </div>
                    </div>
                </div>


            </div>


            <!-- content ends -->
        </div>
        <!--/#content.col-md-0-->
    </div>
    <!--/fluid-row-->


</div>
<!--/.fluid-container-->

<!-- chart libraries start -->

    <!--[if lt IE 8]>
     <script src="./libs/charisma/bower_components/flot/excanvas.min.js"></script>
     <![endif]-->

<script src="./libs/charisma/bower_components/flot/jquery.flot.js"></script>
<script src="./libs/charisma/bower_components/flot/jquery.flot.pie.js"></script>

<!-- chart libraries end -->
<script src="./libs/charisma/js/init-chart.js"></script>

<%- include footer %>