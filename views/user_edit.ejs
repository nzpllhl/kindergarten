
<%- include header %>
<div class="ch-container">
    <div class="row">

        <!-- left menu starts -->
        <%- include left %>
        <!--/span-->
        <!-- left menu ends -->

        <noscript>
            <div class="alert alert-block col-md-12">
                <h4 class="alert-heading">Warning!</h4>

                <p>You need to have JavaScript enabled to use this site.</p>
            </div>
        </noscript>

        <div id="content" class="col-lg-10 col-sm-10">
            <!-- content starts -->
      
            <div>
                <ul class="breadcrumb">
                    <li>
                        <a href="/home">主页</a>
                    </li>
                    <li>
                        <a href="/user">用户管理</a>
                    </li>
                    <li>
                        <a href="#">用户编辑</a>
                    </li>
                </ul>
            </div>
            
            <div class="row">
                <div class="box col-md-12">
                    <div class="box-inner">
                        <div class="box-header well" data-original-title="">
                            <h2><i class="glyphicon glyphicon-user"></i> 用户信息</h2>
            
            
                        </div>
                        <div class="box-content col-md-6">
                            <div class="form-group">
                                <label for="exampleInputEmail1">选择角色</label>
                                <div class="controls">
                                        <select name="roleid" class="form-control">
                                                <option value="">请选择</option>
                                                <% rolelist.forEach(function(value){ %>
                                                    <option <% if(value['id']==users.roleid){ %>selected<%}%> value="<%= value['id'] %>"><%= value['name'] %></option>
                                                    <% }) %>
                                        </select>
                                    </div>
                            </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">用户名</label>
                        <input type="text" class="form-control" id="InputUser" value="<%= users.user %>">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">密码</label>
                        <input type="password" class="form-control" id="InputPassword">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">手机号</label>
                        <input type="text" class="form-control" id="InputTel" value="<%= users.phoneno %>">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">E-mail</label>
                        <input type="text" class="form-control" id="InputEmail" value="<%= users.email %>">
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary">提交</button>
                        <button type="button" class="btn btn-default" onClick="javascript :history.go(-1);">取消</button>
                    </div>
                        </div>
                    </div>
                </div>
                <!--/span-->
            
            </div>

            <!-- content ends -->
        </div>
        <!--/#content.col-md-0-->
    </div>
    <!--/fluid-row-->


</div>
<!--/.fluid-container-->

<%- include footer %>